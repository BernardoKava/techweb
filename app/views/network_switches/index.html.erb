
<% provide(:title, "Servers") %>

<div class="breadcrumb" style="background-color: darkblue;color:whitesmoke">
  <h5>Network Switches</h5>
</div>


<div class="jumbotron"style=" background-color:silver ">
  <table class="table table-bordered" style="background-color: white">
    <thead>
    <tr>
      <th>Code name</th>
      <th>Branding</th>
      <th>Number of ports</th>
      <th>Ip address</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @network_switches.each do |network_switch| %>
      <tr>
        <td><%= network_switch.code_name %></td>
        <td><%= network_switch.branding %></td>
        <td><%= network_switch.number_of_ports %></td>
        <td><%= network_switch.ip_address %></td>
        <td><%= network_switch.active.humanize %></td>
        <td><%= link_to 'View', network_switch %></td>
        <td><%= link_to 'Edit', edit_network_switch_path(network_switch) %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Delete', network_switch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>
  <div class="breadcrumb">
    <%= link_to 'New Network Switch', new_network_switch_path %>
  </div>
</div>

