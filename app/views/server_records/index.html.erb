
<% provide(:title, "Servers") %>

<p id="notice"><%= notice %></p>

<div class="breadcrumb" style="background-color: darkblue;color:whitesmoke">
  <h5>Server Records</h5>
</div>


<div class="jumbotron"style=" background-color:silver ">
  <table class="table table-bordered" style="background-color: white">
    <thead>
    <tr>
      <th>Name</th>
      <th>Virtual</th>
      <th>Operating system</th>
      <th>Owner</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @server_records.each do |server_record| %>
      <tr>
        <td><%= server_record.name %></td>
        <td><%= server_record.virtual.humanize %></td>
        <td><%= server_record.operating_system.name %></td>
        <td><%= server_record.person.fullname %></td>
        <td><%= server_record.user.fullname %></td>
        <td><%= link_to 'View', server_record %></td>
        <td><%= link_to 'Edit', edit_server_record_path(server_record) %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Delete', server_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>
    <div class="breadcrumb">
      <%= link_to 'New Server Record', new_server_record_path %>
    </div>
</div>

