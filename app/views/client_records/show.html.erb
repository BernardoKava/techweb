
<% provide(:title, "Client") %>


<div class="breadcrumb" style="background-color: navy;color: white">
  <h4> Ref#: <%= @client_record.id %> | <%= @client_record.name %> </h4>
</div>


<div class="jumbotron" style="background-color: silver;color: black">
  <table class="table table-bordered" style="background-color: whitesmoke">
    <tbody>
    <tr>
      <td>Name:</td>
      <td> <%= @client_record.name %> </td>
    </tr>
    <tr>
      <td>Description:</td>
      <td> <%= @client_record.description %></td>
    </tr>
    <tr>
      <td>Virtual:</td>
      <td><%= @client_record.virtual.humanize %></td>
    </tr>
    <tr>
      <td>Operating System:</td>
      <td><%= @client_record.operating_system.name %></td>
    </tr>
    <tr>
      <td>Person:</td>
      <td><%= @client_record.person.fullname %></td>
    </tr>
    <tr>
      <td>Deployment Date:</td>
      <td><%= @client_record.deployment_date.strftime("%d %b. %Y") %></td>
    </tr>
    <tr>
      <td>Notes:</td>
      <td>  <%= @client_record.notes %></td>
    </tr>
    <tr>
      <td> Record created by:</td>
      <td><%= @client_record.user.fullname %></td>
    </tr>
    <tr>
      <td>Active:</td>
      <td><%= @client_record.active.humanize %></td>
    </tr>
    <tr>
      <td>On hold:</td>
      <td><%= @client_record.on_hold.humanize %></td>
    </tr>
    </tbody>
  </table>

  <div class="breadcrumb">
    <%= link_to 'Edit', edit_client_record_path(@client_record) %> |
    <%= link_to 'Back', client_records_path %>
  </div>
</div>

<div class="jumbotron" style="background-color: silver">
  <div class="breadcrumb", style="background-color: darkgrey">
    Related Accessories
  </div>

  <table class="table table-bordered" style="background-color: white;color: black">
    <thead>
    <tr>
      <th>Accessory</th>
      <th>Notes</th>

      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% for client_accessory in @client_record.client_accessories %>
      <tr>
        <td data-toggle= "tooltip"  data-placement="top"
            title="Description: <%= client_accessory.accessory.description %> - Active: <%=client_accessory.accessory.active.humanize %>
        - HD: <%= client_accessory.accessory.hard_disk.humanize %> - NIC: <%= client_accessory.accessory.network_card.humanize %>
        - Notes: <%= client_accessory.accessory.notes %> ">
          <%= client_accessory.accessory.name %></td>
        <td><%= client_accessory.notes %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="breadcrumb">
    <%= link_to 'Edit', edit_client_record_path(@client_record) %> |
    <%= link_to 'Back', client_records_path %>
  </div>

</div>









































