
<% provide(:title, "Clients") %>


<p id="notice"><%= notice %></p>

<div class="breadcrumb" style="background-color: darkblue;color:whitesmoke">
  <h5>Client Records</h5>
</div>


<div class="jumbotron"style=" background-color:silver ">
  <table class="table table-bordered" style="background-color: white">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Virtual</th>

      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @client_records.each do |client_record| %>
      <tr>
        <td><%= client_record.name %></td>
        <td><%= client_record.description %></td>
        <td><%= client_record.virtual.humanize %></td>
        <td><%= link_to 'View', client_record %></td>
        <td><%= link_to 'Edit', edit_client_record_path(client_record) %></td>
        <% if current_user.admin == true %>
           <td><%= link_to 'Delete', client_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <div class="breadcrumb">
    <%= link_to 'New Client Record', new_client_record_path %>
  </div>


</div>









