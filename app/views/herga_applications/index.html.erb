
<% provide(:title, "Applications") %>

<div class="breadcrumb" style="background-color: darkblue;color:whitesmoke">
  <h5>Application</h5>
</div>

<div class="jumbotron"style=" background-color:silver ">
  <table class="table table-bordered" style="background-color: white">
    <thead>
    <tr>
      <th>Name</th>
      <th>Dev framework</th>
      <th>Deployment status</th>
      <th>Owner</th>
      <th>Inhouse build</th>
      <th>Third party build</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @herga_applications.each do |herga_application| %>
      <tr>
        <td><%= herga_application.name %></td>
        <td><%= herga_application.dev_framework %></td>
        <td><%= herga_application.deployment_status.name %></td>
        <td><%= herga_application.person.fullname %></td>
        <td><%= herga_application.inhouse_build.humanize %></td>
        <td><%= herga_application.third_party_build.humanize %></td>
        <td><%= link_to 'View', herga_application %></td>
        <td><%= link_to 'Edit', edit_herga_application_path(herga_application) %></td>
        <% if current_user.admin == true %>
          <td><%= link_to 'Delete', herga_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <div class="breadcrumb">
    <%= link_to 'New  Application', new_herga_application_path %>
  </div>


</div>


















































